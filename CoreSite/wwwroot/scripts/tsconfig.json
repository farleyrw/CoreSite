{
	"compilerOptions": {
		"noImplicitAny": false,
		"noEmitOnError": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"allowJs": true,
		"removeComments": false,
		"sourceMap": true,
		"module": "system",
		"target": "es2015",
		"moduleResolution": "node",
		"lib": [ "es2015", "dom" ]
	},
	"compileOnSave": false,
	"exclude": [
		"node_modules",
		"wwwroot"
	],
	"include": [ "./" ]
}
